-- jojo's bizarre adventures


function _init()
	players = {
		create_player(1, "josuke", 11, 10),  
		create_player(2, "dio", 15, 10),
		create_player(3, "jotaro", 100, 10)
	}
end

function _update()
	for p in all(players) do
		update_player(p)
		update_stand(p)
		behavior_player(p)
	end
end

function _draw()
	cls()
	for p in all(players) do
		draw_player(p)
		draw_stand(p)
	end
	draw_target(players[1])
	draw_target(players[2])
end

