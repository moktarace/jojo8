-- database

database = {
	jotaro = {spr = 0, name = "Jotaro Kujo", color = 2, atk = 'a', range = 'c'},
	dio = {spr = 2, name="DIO", color = 10, atk = 'a',  range = 'c'},
	josuke = {spr = 4, name="Josuke Higashikata", atk = 'a', color = 8, range = 'c'}
}
atk = {a  = 3}
range = {c  = 400}

